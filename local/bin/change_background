#!/bin/bash
function set_random_wallpaper() {
  echo $(find ${HOME}/Pictures/wallpapers/ -maxdepth 1 -type f | shuf -n 1) | xargs feh --no-fehbg --bg-fill
}

if [ ${#} -eq 0 ] ; then
  set_random_wallpaper
elif [ ${1} = "-c" ] ; then
  while true ; do
    set_random_wallpaper
    sleep ${2}
  done
else
  feh --no-fehbg --bg-fill ${1}
fi
