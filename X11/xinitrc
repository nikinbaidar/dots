unclutter --timeout 1 --start-hidden --fork
xset -dpms && xset s off &
externalmonitor

cb ${HOME}/pics/wallpapers/dark-forest.jpg

slock

while xsetroot -name "[$(hostname -i)] [$(miti)] [$(date +'%b %d %Y %a')] [$(date +'%R')]" 
do
    sleep 59
done&

exec dwm
