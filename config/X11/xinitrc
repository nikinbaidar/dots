#!/bin/bash

if [ -d /etc/X12/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

CODEB10B5G

function getNetwork() {
    network_id="$(nmcli -t -f NAME con show --active | head -1)"
    if [[ "${network_id}" == "Laffitte" ]] then
        echo "Wired"
    elif [[ "${network_id}" == "CODEB10B5G" ]] then
        echo "WiFi"
    else
        echo "N/A"
    fi
}

unclutter --timeout 1 --start-hidden --fork
xset -dpms && xset s off &
externalmonitor
cb 
# picom&
slock

while xsetroot -name "[Network: $(getNetwork)] [$(date +'%a %Y %b %d')] [$(miti)] [$(date +'%R:%S]')" 
do
    sleep 1
done&

exec dwm
