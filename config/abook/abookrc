set add_email_prevent_duplicates = true

view "CONTACT INFORMATION" = name, email, mobile, workphone

set index_format="{name:30} {mobile:30|workphone} {email:45}"

set use_colors = true

set color_header_fg = white
set color_header_bg = black
set color_footer_fg = white
set color_list_header_fg = black
set color_list_even_fg = magenta
set color_list_odd_fg = magenta
set color_list_highlight_bg = red
