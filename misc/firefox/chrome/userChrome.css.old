/*** Remove items from image context menu ***/

/* Email Image... */
#context-sendimage,

/* Set Image as Desktop Background... (and preceding separator) */
#context-sep-setbackground, #context-setDesktopBackground,

/* Inspect Accessibility Properties */
#context-inspect-a11y
{
  display: none !important;
}

#context-sendpagetodevice, #context-sep-sendpagetodevice,
#context-sendlinktodevice, #context-sep-sendlinktodevice,
#context_sendTabToDevice, #context_sendTabToDevice_separator {
  display: none !important;
}

.tabbrowser-tab:not([busy="true"]):not([pinned]) .tab-icon-image
{
  display: none !important;
}

#sidebar-close {
  visibility: collapse;
}

#sidebar-header {
  display: none;
}

.tabbrowser-tab .tab-close-button {
  display: none !important;
}

:-moz-any(#content,#appcontent) browser{
 margin-right:-10px!important;
 overflow-y:hidden;
 margin-bottom:-0px!important;
 overflow-x:hidden;
}

/* Hide Forward and Back buttons fromt he address bar */
#back-button, #forward-button { display:none!important; }

/* Hide the hamburger menu */
#PanelUI-menu-button {display: none;}

/* Hide the tabs bar and the address bar but show address bar when C-l is
 * pressed
 */

#TabsToolbar { visibility: collapse !important; }

#main-window:not([customizing]) #navigator-toolbox:not(:focus-within){
    margin-top: -40px;
}

